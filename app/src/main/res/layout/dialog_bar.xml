<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context="com.test.UAVRemoter.Help"
android:orientation="vertical"
android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dip"
        android:background="@drawable/dialog_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Yaw Auxiliary:"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/mySeekBar1"
                android:layout_width="200dp"
                android:progressDrawable="@drawable/bar"
                android:maxHeight="5dp"
                android:theme="@style/SeekBarColor"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mySeekBar1text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Throttle Auxiliary:"/>

            <SeekBar
                android:id="@+id/mySeekBar2"
                android:layout_width="200dp"
                android:progressDrawable="@drawable/bar"
                android:maxHeight="5dp"
                android:theme="@style/SeekBarColor"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mySeekBar2text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Pitch Auxiliary:"/>

            <SeekBar
                android:id="@+id/mySeekBar3"
                android:layout_width="200dp"
                android:progressDrawable="@drawable/bar"
                android:maxHeight="5dp"
                android:theme="@style/SeekBarColor"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mySeekBar3text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Roll Auxiliary:"/>

            <SeekBar
                android:id="@+id/mySeekBar4"
                android:layout_width="200dp"
                android:progressDrawable="@drawable/bar"
                android:maxHeight="5dp"
                android:theme="@style/SeekBarColor"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mySeekBar4text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/button"
        android:layout_gravity="top|right"
        />

</FrameLayout>